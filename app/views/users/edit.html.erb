<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-sm-10 col-md-6 mx-auto">

      <h2 class="text-center mt-3 mb-5">ユーザー情報編集</h2>
    
      <div class="form">
        <%= form_with model:@user,local:true do |f| %>
    
          <div class="form mb-2">
            <h5 for="task_name">ユーザー名</h5>
            <%= f.text_field :name, class: "form-control task_name" %>
          </div>
          <div class="form mb-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          
          <div class="action mt-3 mb-2">
            <%= f.submit "変更する", class: "btn btn-outline-success" %>
          </div>
    
        <% end %>
      </div>

    </div>
  </div>
</div>
