<div class="container px-5 px-sm-0 mt-3">

  <h2 class="text-center mt-3 mb-5">ユーザー登録</h2>

  <div class="form-group">
    <%= form_with model:@user, url: sign_up_path, local:true do |f| %>

      <div class="form mb-2">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="form mb-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form mb-2">
        <%= f.label :パスワード %><br />
        <%= f.text_field :password %>
      </div>

      <div class="form mb-2">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
        <%= f.text_field :password_confirmation %>
      </div>

      <div class="action mb-2">
        <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      </div>


    <% end %>
  </div>

</div>