<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-sm-10 col-md-6 mx-auto">
      <h2 class="text-center mt-3 mb-5">ログイン</h2>

      <div class="p-5 my-4 bg-body rounded border">
        <%= form_with model:@user, url: login_path, local:true do |f| %>

          <div class="form mb-2">
            <%= f.label :ユーザー名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
          </div>

          <div class="form mb-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="form mb-2">
            <%= f.label :パスワード %><br />
            <%= f.text_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>

          <div class="action mt-4">
            <%= f.submit "ログイン", class: "btn btn-sm btn-success" %>
          </div>


        <% end %>
      </div>

    </div>
  </div>
</div>