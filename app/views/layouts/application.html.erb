<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-white text-dark border-bottom">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <ul class="navbar-nav ml-auto mb-2">
        <% if current_user %>
          <li>
            <%= link_to "ユーザー情報編集", edit_user_path(current_user.id), class: "nav-link text-dark fas fa-star" %>
          </li>
          <li>
            <%= link_to "タスク登録", new_task_path, class: "nav-link text-dark fas fa-star" %>
          </li>
          <li>
            <%= link_to "タスク一覧", tasks_path, class: "nav-link text-dark fas fa-star" %>
          </li>
          <li>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link text-dark fas fa-star" %>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>